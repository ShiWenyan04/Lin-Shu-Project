    <sql id="selectBusiGraduateTeachingVo">
        select id, student_name, grade, course_name, teaching_time, teaching_class, teaching_weeks, teaching_content, ppt_file, audit_status, audit_reason, create_by, create_time, update_by, update_time, remark from busi_graduate_teaching
    </sql>

    <select id="selectBusiGraduateTeachingList" parameterType="BusiGraduateTeaching" resultMap="BusiGraduateTeachingResult">
        <include refid="selectBusiGraduateTeachingVo"/>
        <where>
            <if test="studentName != null  and studentName != ''"> and student_name like concat('%', #{studentName}, '%')</if>
            <if test="grade != null  and grade != ''"> and grade = #{grade}</if>
            <if test="auditStatus != null  and auditStatus != ''"> and audit_status = #{auditStatus}</if>

            <if test="createBy != null and createBy != ''"> and create_by = #{createBy}</if>

            <if test="params.dataScope != null and params.dataScope != ''">
                ${params.dataScope}
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="selectBusiGraduateTeachingById" parameterType="Long" resultMap="BusiGraduateTeachingResult">
        <include refid="selectBusiGraduateTeachingVo"/>
        where id = #{id}
    </select>

    <insert id="insertBusiGraduateTeaching" parameterType="BusiGraduateTeaching" useGeneratedKeys="true" keyProperty="id">
        insert into busi_graduate_teaching
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="studentName != null">student_name,</if>
            <if test="grade != null">grade,</if>
            <if test="courseName != null">course_name,</if>
            <if test="teachingTime != null">teaching_time,</if>
            <if test="teachingClass != null">teaching_class,</if>
            <if test="teachingWeeks != null">teaching_weeks,</if>
            <if test="teachingContent != null">teaching_content,</if>
            <if test="pptFile != null">ppt_file,</if>
            <if test="auditStatus != null">audit_status,</if>
            <if test="auditReason != null">audit_reason,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="studentName != null">#{studentName},</if>
            <if test="grade != null">#{grade},</if>
            <if test="courseName != null">#{courseName},</if>
            <if test="teachingTime != null">#{teachingTime},</if>
            <if test="teachingClass != null">#{teachingClass},</if>
            <if test="teachingWeeks != null">#{teachingWeeks},</if>
            <if test="teachingContent != null">#{teachingContent},</if>
            <if test="pptFile != null">#{pptFile},</if>
            <if test="auditStatus != null">#{auditStatus},</if>
            <if test="auditReason != null">#{auditReason},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateBusiGraduateTeaching" parameterType="BusiGraduateTeaching">
        update busi_graduate_teaching
        <trim prefix="SET" suffixOverrides=",">
            <if test="studentName != null">student_name = #{studentName},</if>
            <if test="grade != null">grade = #{grade},</if>
            <if test="courseName != null">course_name = #{courseName},</if>
            <if test="teachingTime != null">teaching_time = #{teachingTime},</if>
            <if test="teachingClass != null">teaching_class = #{teachingClass},</if>
            <if test="teachingWeeks != null">teaching_weeks = #{teachingWeeks},</if>
