<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BusiCameraPointMapper">

    <resultMap type="BusiCameraPoint" id="BusiCameraPointResult">
        <result property="id"    column="id"    />
        <result property="installId"    column="install_id"    />
        <result property="siteCode"    column="site_code"    />
        <result property="longitude"    column="longitude"    />
        <result property="latitude"    column="latitude"    />
        <result property="altitude"    column="altitude"    />
        <result property="createTime"    column="create_time"    />
        <result property="speciesNames" column="speciesNames"/>
    </resultMap>

    <sql id="selectBusiCameraPointVo">
        select id, install_id, site_code, longitude, latitude, altitude, create_time from busi_camera_point
    </sql>

    <select id="selectBusiCameraPointList" parameterType="BusiCameraPoint" resultMap="BusiCameraPointResult">
        SELECT
        p.id,
        p.install_id,
        p.site_code,
        p.longitude,
        p.latitude,
        p.altitude,
        p.create_time,
        (
        SELECT GROUP_CONCAT(DISTINCT s.species_name SEPARATOR ',')
        FROM busi_species_data s
        WHERE s.point_id = p.id
        ) as speciesNames
        FROM busi_camera_point p
        <where>
            <if test="installId != null "> and p.install_id = #{installId}</if>
            <if test="siteCode != null  and siteCode != ''"> and p.site_code = #{siteCode}</if>
            <if test="longitude != null "> and p.longitude = #{longitude}</if>
            <if test="latitude != null "> and p.latitude = #{latitude}</if>
            <if test="altitude != null "> and p.altitude = #{altitude}</if>
        </where>
    </select>

    <select id="selectBusiCameraPointById" parameterType="Long" resultMap="BusiCameraPointResult">
        <include refid="selectBusiCameraPointVo"/>
        where id = #{id}
    </select>

    <insert id="insertBusiCameraPoint" parameterType="BusiCameraPoint" useGeneratedKeys="true" keyProperty="id">
        insert into busi_camera_point
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="installId != null">install_id,</if>
            <if test="siteCode != null and siteCode != ''">site_code,</if>
            <if test="longitude != null">longitude,</if>
            <if test="latitude != null">latitude,</if>
            <if test="altitude != null">altitude,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="installId != null">#{installId},</if>
            <if test="siteCode != null and siteCode != ''">#{siteCode},</if>
            <if test="longitude != null">#{longitude},</if>
            <if test="latitude != null">#{latitude},</if>
            <if test="altitude != null">#{altitude},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateBusiCameraPoint" parameterType="BusiCameraPoint">
        update busi_camera_point
        <trim prefix="SET" suffixOverrides=",">
            <if test="installId != null">install_id = #{installId},</if>
            <if test="siteCode != null and siteCode != ''">site_code = #{siteCode},</if>
            <if test="longitude != null">longitude = #{longitude},</if>
            <if test="latitude != null">latitude = #{latitude},</if>
            <if test="altitude != null">altitude = #{altitude},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusiCameraPointById" parameterType="Long">
        delete from busi_camera_point where id = #{id}
    </delete>

    <delete id="deleteBusiCameraPointByIds" parameterType="String">
        delete from busi_camera_point where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>