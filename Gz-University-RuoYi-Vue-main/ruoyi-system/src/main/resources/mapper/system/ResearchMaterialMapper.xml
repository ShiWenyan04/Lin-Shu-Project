<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.research.mapper.ResearchMaterialMapper">
    
    <resultMap type="ResearchMaterial" id="ResearchMaterialResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="type"    column="type"    />
        <result property="contentSummary"    column="content_summary"    />
        <result property="directionCategory"    column="direction_category"    />
        <result property="storagePath"    column="storage_path"    />
        <result property="inputPerson"    column="input_person"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectResearchMaterialVo">
        select id, name, type, content_summary, direction_category, storage_path, input_person, update_time, remark, create_by, create_time, update_by, del_flag from research_material
    </sql>

    <select id="selectResearchMaterialList" parameterType="ResearchMaterial" resultMap="ResearchMaterialResult">
        <include refid="selectResearchMaterialVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="inputPerson != null  and inputPerson != ''"> and input_person = #{inputPerson}</if>
        </where>
    </select>
    
    <select id="selectResearchMaterialById" parameterType="Long" resultMap="ResearchMaterialResult">
        <include refid="selectResearchMaterialVo"/>
        where id = #{id}
    </select>

    <insert id="insertResearchMaterial" parameterType="ResearchMaterial" useGeneratedKeys="true" keyProperty="id">
        insert into research_material
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="contentSummary != null and contentSummary != ''">content_summary,</if>
            <if test="directionCategory != null and directionCategory != ''">direction_category,</if>
            <if test="storagePath != null and storagePath != ''">storage_path,</if>
            <if test="inputPerson != null and inputPerson != ''">input_person,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="contentSummary != null and contentSummary != ''">#{contentSummary},</if>
            <if test="directionCategory != null and directionCategory != ''">#{directionCategory},</if>
            <if test="storagePath != null and storagePath != ''">#{storagePath},</if>
            <if test="inputPerson != null and inputPerson != ''">#{inputPerson},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateResearchMaterial" parameterType="ResearchMaterial">
        update research_material
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="type != null and type != ''">type = #{type},</if>
            <if test="contentSummary != null and contentSummary != ''">content_summary = #{contentSummary},</if>
            <if test="directionCategory != null and directionCategory != ''">direction_category = #{directionCategory},</if>
            <if test="storagePath != null and storagePath != ''">storage_path = #{storagePath},</if>
            <if test="inputPerson != null and inputPerson != ''">input_person = #{inputPerson},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteResearchMaterialById" parameterType="Long">
        delete from research_material where id = #{id}
    </delete>

    <delete id="deleteResearchMaterialByIds" parameterType="String">
        delete from research_material where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>