<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SampleUsageRecordMapper">

    <resultMap type="SampleUsageRecord" id="SampleUsageRecordResult">
        <result property="id"    column="id"    />
        <result property="sampleId"    column="sample_id"    />
        <result property="usedBy"    column="used_by"    />
        <result property="usedTime"    column="used_time"    />
        <result property="purpose"    column="purpose"    />
        <result property="sampleCode"    column="sample_code"    />
        <result property="host"    column="host"    />
        <result property="sampleType"    column="sample_type"    />
        <result property="samplingLocation"    column="sampling_location"    />
        <result property="habitatType"    column="habitat_type"    />
        <result property="longitude"    column="longitude"    />
        <result property="latitude"    column="latitude"    />
        <result property="samplingTime"    column="sampling_time"    />
        <result property="sampler"    column="sampler"    />
        <result property="storageLocation"    column="storage_location"    />
    </resultMap>

    <sql id="selectSampleUsageRecordVo">
        select id, sample_id, used_by, used_time, purpose,
               sample_code, host, sample_type, sampling_location, habitat_type,
               longitude, latitude, sampling_time, sampler, storage_location
        from sample_usage_record
    </sql>

    <select id="selectSampleUsageRecordList" parameterType="SampleUsageRecord" resultMap="SampleUsageRecordResult">
        <include refid="selectSampleUsageRecordVo"/>
        <where>
            <if test="sampleId != null "> and sample_id = #{sampleId}</if>
            <if test="usedBy != null  and usedBy != ''"> and used_by like concat('%', #{usedBy}, '%')</if>
            <if test="usedTime != null "> and used_time = #{usedTime}</if>
            <if test="purpose != null  and purpose != ''"> and purpose like concat('%', #{purpose}, '%')</if>
            <!-- 添加前端搜索条件 -->
            <if test="host != null  and host != ''"> and host like concat('%', #{host}, '%')</if>
            <if test="sampleType != null  and sampleType != ''"> and sample_type like concat('%', #{sampleType}, '%')</if>
            <if test="sampler != null  and sampler != ''"> and sampler like concat('%', #{sampler}, '%')</if>
        </where>
    </select>

    <select id="selectSampleUsageRecordById" parameterType="Long" resultMap="SampleUsageRecordResult">
        <include refid="selectSampleUsageRecordVo"/>
        where id = #{id}
    </select>

    <insert id="insertSampleUsageRecord" parameterType="SampleUsageRecord" useGeneratedKeys="true" keyProperty="id">
        insert into sample_usage_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sampleId != null">sample_id,</if>
            <if test="usedBy != null">used_by,</if>
            <if test="usedTime != null">used_time,</if>
            <if test="purpose != null">purpose,</if>
            <if test="sampleCode != null">sample_code,</if>
            <if test="host != null">host,</if>
            <if test="sampleType != null">sample_type,</if>
            <if test="samplingLocation != null">sampling_location,</if>
            <if test="habitatType != null">habitat_type,</if>
            <if test="longitude != null">longitude,</if>
            <if test="latitude != null">latitude,</if>
            <if test="samplingTime != null">sampling_time,</if>
            <if test="sampler != null">sampler,</if>
            <if test="storageLocation != null">storage_location,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sampleId != null">#{sampleId},</if>
            <if test="usedBy != null">#{usedBy},</if>
            <if test="usedTime != null">#{usedTime},</if>
            <if test="purpose != null">#{purpose},</if>
            <if test="sampleCode != null">#{sampleCode},</if>
            <if test="host != null">#{host},</if>
            <if test="sampleType != null">#{sampleType},</if>
            <if test="samplingLocation != null">#{samplingLocation},</if>
            <if test="habitatType != null">#{habitatType},</if>
            <if test="longitude != null">#{longitude},</if>
            <if test="latitude != null">#{latitude},</if>
            <if test="samplingTime != null">#{samplingTime},</if>
            <if test="sampler != null">#{sampler},</if>
            <if test="storageLocation != null">#{storageLocation},</if>
        </trim>
    </insert>

    <update id="updateSampleUsageRecord" parameterType="SampleUsageRecord">
        update sample_usage_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="sampleId != null">sample_id = #{sampleId},</if>
            <if test="usedBy != null">used_by = #{usedBy},</if>
            <if test="usedTime != null">used_time = #{usedTime},</if>
            <if test="purpose != null">purpose = #{purpose},</if>
            <!-- 添加更新其他字段的条件 -->
            <if test="sampleCode != null">sample_code = #{sampleCode},</if>
            <if test="host != null">host = #{host},</if>
            <if test="sampleType != null">sample_type = #{sampleType},</if>
            <if test="samplingLocation != null">sampling_location = #{samplingLocation},</if>
            <if test="habitatType != null">habitat_type = #{habitatType},</if>
            <if test="longitude != null">longitude = #{longitude},</if>
            <if test="latitude != null">latitude = #{latitude},</if>
            <if test="samplingTime != null">sampling_time = #{samplingTime},</if>
            <if test="sampler != null">sampler = #{sampler},</if>
            <if test="storageLocation != null">storage_location = #{storageLocation},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSampleUsageRecordById" parameterType="Long">
        delete from sample_usage_record where id = #{id}
    </delete>

    <delete id="deleteSampleUsageRecordByIds" parameterType="String">
        delete from sample_usage_record where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>