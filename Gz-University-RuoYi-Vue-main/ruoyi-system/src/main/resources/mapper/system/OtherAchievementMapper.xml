<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.system.OtherAchievementMapper">

    <resultMap type="OtherAchievement" id="OtherAchievementResult">
        <result property="id"    column="id"    />
        <result property="achievementType"    column="achievement_type"    />
        <result property="name"    column="name"    />
        <result property="mainPerson"    column="main_person"    />
        <result property="coPerson"    column="co_person"    />
        <result property="issueUnit"    column="issue_unit"    />
        <result property="awardLevel"    column="award_level"    />
        <result property="obtainTime"    column="obtain_time"    />
        <result property="rewardStatus"    column="reward_status"    />
        <result property="rewardAmount"    column="reward_amount"    />
        <result property="rewardTime"    column="reward_time"    />
        <result property="auditStatus"    column="audit_status"    />
        <result property="auditOpinion"    column="audit_opinion"    />
        <result property="auditorId"    column="auditor_id"    />
        <result property="auditTime"    column="audit_time"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectOtherAchievementVo">
        select id, achievement_type, name, main_person, co_person, issue_unit, award_level, obtain_time, reward_status, reward_amount, reward_time, audit_status, audit_opinion, auditor_id, audit_time, del_flag, create_by, create_time, update_by, update_time, remark from other_achievement
    </sql>

    <select id="selectOtherAchievementList" parameterType="OtherAchievement" resultMap="OtherAchievementResult">
        <include refid="selectOtherAchievementVo"/>
        <where>
            <if test="achievementType != null  and achievementType != ''"> and achievement_type = #{achievementType}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>

            <if test="createBy != null and createBy != ''"> and create_by = #{createBy}</if>

            <if test="auditStatus != null and auditStatus != ''"> and audit_status = #{auditStatus}</if>

            <if test="params.queryMode == 'public'"> and audit_status = '1'</if>

            <if test="params.queryMode == 'audit'"> and audit_status = '0'</if>
        </where>
    </select>

    <select id="selectOtherAchievementById" parameterType="Long" resultMap="OtherAchievementResult">
        <include refid="selectOtherAchievementVo"/>
        where id = #{id}
    </select>

    <insert id="insertOtherAchievement" parameterType="OtherAchievement" useGeneratedKeys="true" keyProperty="id">
        insert into other_achievement
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="achievementType != null and achievementType != ''">achievement_type,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="mainPerson != null and mainPerson != ''">main_person,</if>
            <if test="coPerson != null and coPerson != ''">co_person,</if>
            <if test="issueUnit != null and issueUnit != ''">issue_unit,</if>
            <if test="awardLevel != null and awardLevel != ''">award_level,</if>
            <if test="obtainTime != null">obtain_time,</if>
            <if test="rewardStatus != null and rewardStatus != ''">reward_status,</if>
            <if test="rewardAmount != null">reward_amount,</if>
            <if test="rewardTime != null">reward_time,</if>
            <if test="auditStatus != null">audit_status,</if>
            <if test="auditOpinion != null">audit_opinion,</if>
            <if test="auditorId != null">auditor_id,</if>
            <if test="auditTime != null">audit_time,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="achievementType != null and achievementType != ''">#{achievementType},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="mainPerson != null and mainPerson != ''">#{mainPerson},</if>
            <if test="coPerson != null and coPerson != ''">#{coPerson},</if>
            <if test="issueUnit != null and issueUnit != ''">#{issueUnit},</if>
            <if test="awardLevel != null and awardLevel != ''">#{awardLevel},</if>
            <if test="obtainTime != null">#{obtainTime},</if>
            <if test="rewardStatus != null and rewardStatus != ''">#{rewardStatus},</if>
            <if test="rewardAmount != null">#{rewardAmount},</if>
            <if test="rewardTime != null">#{rewardTime},</if>
            <if test="auditStatus != null">#{auditStatus},</if>
            <if test="auditOpinion != null">#{auditOpinion},</if>
            <if test="auditorId != null">#{auditorId},</if>
            <if test="auditTime != null">#{auditTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateOtherAchievement" parameterType="OtherAchievement">
        update other_achievement
        <trim prefix="SET" suffixOverrides=",">
            <if test="achievementType != null and achievementType != ''">achievement_type = #{achievementType},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="mainPerson != null and mainPerson != ''">main_person = #{mainPerson},</if>
            <if test="coPerson != null and coPerson != ''">co_person = #{coPerson},</if>
            <if test="issueUnit != null and issueUnit != ''">issue_unit = #{issueUnit},</if>
            <if test="awardLevel != null and awardLevel != ''">award_level = #{awardLevel},</if>
            <if test="obtainTime != null">obtain_time = #{obtainTime},</if>
            <if test="rewardStatus != null and rewardStatus != ''">reward_status = #{rewardStatus},</if>
            <if test="rewardAmount != null">reward_amount = #{rewardAmount},</if>
            <if test="rewardTime != null">reward_time = #{rewardTime},</if>
            <if test="auditStatus != null">audit_status = #{auditStatus},</if>
            <if test="auditOpinion != null">audit_opinion = #{auditOpinion},</if>
            <if test="auditorId != null">auditor_id = #{auditorId},</if>
            <if test="auditTime != null">audit_time = #{auditTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOtherAchievementById" parameterType="Long">
        delete from other_achievement where id = #{id}
    </delete>

    <delete id="deleteOtherAchievementByIds" parameterType="String">
        delete from other_achievement where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>